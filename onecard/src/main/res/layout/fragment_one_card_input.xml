<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:text="请录入本人身份信息"
        android:textColor="#000000"
        android:layout_height="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="拍照录入"
        android:id="@+id/one_card_fragment_go_camera"
        android:textColor="#0000ff"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_height="wrap_content"
        android:hint="请输入姓名"
        android:background="@drawable/one_card_edit_shape"
        android:id="@+id/one_card_input_name"
        android:layout_width="match_parent"/>

    <EditText
        android:layout_height="wrap_content"
        android:hint="请输入身份证号"
        android:layout_marginTop="30dp"
        android:background="@drawable/one_card_edit_shape"
        android:id="@+id/one_card_input_idcard"
        android:layout_width="match_parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="下一步"
        android:id="@+id/one_card_fragment_input_next"
        android:textColor="#0000ff"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content" />
</LinearLayout>